{
	"dependencies": {
		"eslint": "^9.16.0",
		"eslint-config-next": "^15.0.4",
		"globals": "^15.13.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"prettier": "^3.4.2",
		"prettier-plugin-solidity": "^1.4.1",
		"solhint": "^5.0.3"
	},
	"type": "module",
	"lint-staged": {
		"./frontend/**/*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"./eth/**/*.ts": [
			"eslint --fix",
			"prettier --write"
		],
		"./eth/**/*.sol": [
			"solhint --fix"
		]
	},
	"scripts": {
		"dev": "cd frontend && pnpm dev",
		"build": "cd frontend && pnpm build",
		"start": "cd frontend && pnpm start",
		"prepare": "husky"
	}
}
